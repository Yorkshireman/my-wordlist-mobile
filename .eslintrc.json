{
    "env": {
        "browser": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "react/prop-types": "warn",
        "react/react-in-jsx-scope": "off",
        "semi": [
            "error",
            "always"
        ],
        "sort-imports": [
            "error", 
            { 
                "ignoreCase": true,
                "memberSyntaxSortOrder": ["none", "all", "single", "multiple"]
            }
        ],
        "sort-keys": "error"
    }
}
